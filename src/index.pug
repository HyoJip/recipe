extends templates/layout

block content
    .results
        ul.results__list
        //-
            <li>
                <a class="results__link results__link--active" href="#23456">
                    <figure class="results__fig">
                        <img src="img/test-1.jpg" alt="Test">
                    </figure>
                    <div class="results__data">
                        <h4 class="results__name">Pasta with Tomato ...</h4>
                        <p class="results__author">The Pioneer Woman</p>
                    </div>
                </a>
            </li>
        .results__pages
        //-
            <button class="btn-inline results__btn--prev">
                <svg class="search__icon">
                    <use href="img/icons.svg#icon-triangle-left"></use>
                </svg>
                <span>Page 1</span>
            </button>
            <button class="btn-inline results__btn--next">
                <span>Page 3</span>
                <svg class="search__icon">
                    <use href="img/icons.svg#icon-triangle-right"></use>
                </svg>
            </button>
        
    .recipe
    //-
        figure.recipe__fig
            <img src="img/test-1.jpg" alt="Tomato" class="recipe__img">
            <h1 class="recipe__title">
                <span>Pasta with tomato cream sauce</span>
            </h1>
    
        .recipe__details
            <div class="recipe__info">
                <svg class="recipe__info-icon">
                    <use href="img/icons.svg#icon-stopwatch"></use>
                </svg>
                <span class="recipe__info-data recipe__info-data--minutes">45</span>
                <span class="recipe__info-text"> minutes</span>
            </div>
            <div class="recipe__info">
                <svg class="recipe__info-icon">
                    <use href="img/icons.svg#icon-man"></use>
                </svg>
                <span class="recipe__info-data recipe__info-data--people">4</span>
                <span class="recipe__info-text"> servings</span>

                <div class="recipe__info-buttons">
                    <button class="btn-plus">
                        <svg>
                            <use href="img/icons.svg#icon-circle-with-minus"></use>
                        </svg>
                    </button>
                    <button class="btn-minus">
                        <svg>
                            <use href="img/icons.svg#icon-circle-with-plus"></use>
                        </svg>
                    </button>
                </div>

            </div>
            <button class="recipe__love">
                <svg class="header__likes">
                    <use href="img/icons.svg#icon-heart-outlined"></use>
                </svg>
            </button>

        .recipe__ingredients
            ul.recipe__ingredient-list
                <li class="recipe__item">
                    <svg class="recipe__icon">
                        <use href="img/icons.svg#icon-check"></use>
                    </svg>
                    <div class="recipe__count">1000</div>
                    <div class="recipe__ingredient">
                        <span class="recipe__unit">g</span>
                        pasta
                    </div>
                </li>

            button.btn-small.recipe__btn
                svg.earch__icon
                    use(href="img/icons.svg#icon-shopping-cart")
                span Add to shopping list

        .recipe__directions
        h2.heading-2 How to cook it
        p.recipe__directions-text
            | This recipe was carefully designed and tested by
            span.recipe__by The Pioneer Woman
            | Please check out directions at their website.
        a.btn-small.recipe__btn(href="http://thepioneerwoman.com/cooking/pasta-with-tomato-cream-sauce/" target="_blank")
            span Directions
            svg.search__icon
                use(href="img/icons.svg#icon-triangle-right")